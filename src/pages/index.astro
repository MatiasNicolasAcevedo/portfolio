---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
---

<Layout 
  title="Porfolio de Matias - Desarrollador Web - Programador Java"
  description="Contrata un desarrollador con +1 año de experiencia. Como backend con spring boot, team lead y frontend con react tailwind."
>
  <main>
    <SectionContainer class="py-44 pb-24">
      <img class="rounded-full size-12 mb-4" src="/src/assets/matias-photo.png" alt="matias photo" />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
        Hey, soy Matias
        <a href="https://www.linkedin.com/in/matias-nicolas-acevedo/"
        target="_blank"
        rel="noopener"
        class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </a> 
      </h1>
      <h2 class="text-2xl text-wrap">
        <span class="">+1 año de experiencia.</span><span class="text-yellow-200/90"> Desarrollador Backend con Spring-Boot. Team Lead.</span>
          <span class="text-red-200/90 "> Desarrollador Frontend con React y Tailwind</span>. <span class="opacity-75">De Córdoba, Argentina</span>.
        
      </h2>

      <nav class="flex gap-x-4 mt-8">
        <SocialPill href="https://www.linkedin.com/in/matias-nicolas-acevedo/">
          <LinkedInIcon class="size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/MatiasNicolasAcevedo">
          <GitHubIcon class="size-6" />
          Github
        </SocialPill>
        <SocialPill href="https://github.com/MatiasNicolasAcevedo">
          <MailIcon class="size-6" />
          matias.nicolas.acevedo@gmail.com
        </SocialPill>
        {/* Hacer un link similar para descargar mi cv */}
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex flex-row gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
