---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img class="rounded-full w-12 h-12 mb-4" src="/src/assets/matias-photo.png" alt="matias photo" />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
        Hey, soy Matias
        <a href="https://www.linkedin.com/in/matias-nicolas-acevedo/"
        target="_blank"
        rel="noopener"
        class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </a> {/* Hacer un link similar para descargar mi cv */}
      </h1>
      <h2 class="text-2xl text-wrap">
        <span class="">+1 año de experiencia.</span><span class="text-yellow-200/90"> Desarrollador Backend con Spring-Boot. Team Lead.</span>
          <span class="text-red-200/90 "> Desarrollador Frontend con React y Tailwind</span>. <span class="opacity-75">De Córdoba, Argentina</span>.
        
      </h2>

      <ul></ul>
    </section>
  </main>
</Layout>
